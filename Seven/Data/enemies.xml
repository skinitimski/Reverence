        <attacks>
            <attack id="Whip">
                <type>Physical</type>
                <power>16</power>
                <hitp>110</hitp>
                <target>Combatant</target>
                <element>Hit</element>
                <hidden>true</hidden>
            </attack>
            <attack id="Big Fang">
                <type>Physical</type>
                <power>37</power>
                <hitp>85</hitp>
                <target>Combatant</target>
                <element>Hit</element>
                <hidden>true</hidden>
            </attack>
            <attack id="Evil Poison">
                <type>Physical</type>
                <power>12</power>
                <hitp>105</hitp>
                <cost>4</cost>
                <target>Combatant</target>
                <element>Poison</element>
                <hidden>true</hidden>
                <statusChange type="Inflict" statuses="Darkness" odds="100" />
            </attack>
        </attacks>
        <ai>
            <setup>
                self["specialChance"] = 16
                self["count"] = 0
            </setup>
            <main>
                local a = nil
                
                if self["count"] == 0 or self["count"] == 1 then
                
                    a = chooseRandomAlly()
                    
                    
                    if roll(1,self["specialChance"],1) then
                        self:UseAttackAndWait("Whip", a)
                        a = chooseRandomAlly()
                        self:UseAttack("Whip", a)
                    else                    
                        self:UseAttack("Whip", a)                        
                    end
                    
                    self["count"] = self["count"] + 1
                    
                elseif self["count"] == 2 then
                    
                    a = chooseRandomAllyWithoutDarkness()
                    
                    if a ~= nil and roll(1,self["specialChance"],1) then
                        self:UseAttack("Evil Poison", a)
                    else                        
                        a = chooseRandomAlly()
                        
                        if roll(1,self["specialChance"],1)then
                            self:UseAttackAndWait("Whip", a)
                            a = chooseRandomAlly()
                            self:UseAttack("Whip", a)                            
                            self["count"] = 3
                        else
                            self:UseAttack("Whip", a)
                            self["count"] = 0
                        end                        
                    end     
                                  
                else
                    
                    a = chooseRandomAllyWithHighestHP()
                    self:UseAttack("Big Fang", a)
                    self["count"] = 1
                    
                end                
            </main>
            <counter>
                if self.HP &lt;= self.MaxHP / 2 then
                    SpecialChance = 2
                elseif self.HP &lt;= self.MaxHP * 3 / 4 then
                    SpecialChance = 3
                else
                    SpecialChance = 4
                end   
            </counter>
        </ai>
