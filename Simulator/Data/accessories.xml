<!-- ********* ACCESSORIES ********* -->
<accessories>
    <accessory>
        <name>Power Wrist</name>
        <desc>Strength +10</desc>
        <attach>function (c) c.StrengthBonus = c.StrengthBonus + 10 end</attach>
        <detach>function (c) c.StrengthBonus = c.StrengthBonus - 10 end</detach>
    </accessory>
    <accessory>
        <name>Protect Vest</name>
        <desc>Vitality +10</desc>
